{% extends "base.html.jinja" %}

{% block content %}
<div class="notes-section">
    <h3>NOTES</h3>
    <div class="notes-header">
        <span>THINGS TO REMEMBER</span>
        <button id="add-note-btn-{{item['Item ID']}}" class="add-note-btn">+ ADD NOTE</button>
    </div>
    <textarea 
        id="item-notes-{{item['Item ID']}}" 
        class="notes-input"
        placeholder="Add notes about this item..."
    >{{item.notes if item.notes else ''}}</textarea>
</div>
{% endblock %} 